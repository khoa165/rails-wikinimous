<%= form_for (article)  do |f| %>
  <div class="form-group">
    <h6><%= f.label :title %></h6>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h6><%= f.label :content %></h6>
    <%= f.text_area :content %>
    <!-- <#= f.text_area(:text, size: '50x10') > -->
  </div>
  <%= f.submit class: 'btn btn-outline-primary' %>
<% end %>
