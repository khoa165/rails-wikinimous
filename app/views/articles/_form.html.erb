<%= form_for article do |f| %>
  <div class="form-group">
    <h6><%= f.label :title %></h6>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h6><%= f.label :content %></h6>
    <%= f.text_area :content %>
  </div>
  <%= f.submit class: 'btn btn-outline-primary' %>
<% end %>

<div class="container">
  <div class="row">
    <%= simple_form_for article do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <% end %>
  </div>
</div>
